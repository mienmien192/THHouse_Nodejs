<div class="container my-3 mt-5" style="font-family: 'Baloo Thambi 2', cursive; ">
    <div class="row">
        <h3 class="menu_home_title line_after_heading"><strong>MENU </strong><a href="" class="btn btn-outline-dark" style="float:right; width:200px; height:40px;text-transform: uppercase; ">Tất cả sản phẩm</a> <br></h3>

        <%
            products.map(pro=>{%>
            <div class="row-sm-6 col-md-4">
                <div class="product-card">
                    <div class="img">
                        <center><img src="<%= pro.imageSrc %>" alt=""></center>
                    </div>
                    <br>
                    <div class="content">
                        <a href="">
                            <h3>
                                <strong><%= pro.name%></strong>
                            </h3>
                        </a>
                        <p>
                            <%= pro.info%>
                        </p>
                        <h4>
                            <%= pro.price%> Đ
                        </h4>
                        <a href="/cart/add/<%= pro._id %>" class="addToCart btn btn-outline-dark">Mua ngay</a>
                        <a href="/cart/add/<%= pro._id %>" class="addToCart btn btn-dark" style="color: #fff;">Tìm hiểu thêm</a>
                    </div>
                </div>
            </div>
            <%})
       %>
    </div>
    <hr>

</div>